<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layoutAnswerItem">

    <LinearLayout
        android:tag="Bottom4"
        android:id="@+id/bottom_wrapper_2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/buttonDeleteAnswer"
            android:src="@drawable/delete"
            android:layout_width="70dp"
            android:background="@color/colorPrimary"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/checkboxAnswer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="18sp"
                android:layout_alignParentStart="true"/>
            <EditText
                android:id="@+id/item_answer_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Answer"
                android:inputType="textMultiLine"
                android:textStyle="normal"
                android:textSize="16sp"
                android:layout_toEndOf="@+id/checkboxAnswer"
                android:layout_toStartOf="@+id/btnSaveAnswer"
                android:layout_centerVertical="true"/>
            <ImageButton
                android:id="@+id/btnSaveAnswer"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/okg"
                android:adjustViewBounds="true"
                android:background="@null"
                android:padding="7dp"
                android:scaleType="fitCenter"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    </LinearLayout>
</com.daimajia.swipe.SwipeLayout>